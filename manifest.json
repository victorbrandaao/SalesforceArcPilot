{
  "manifest_version": 3,
  "name": "Salesforce ArcPilot - Org Manager",
  "version": "2.0.0",
  "description": "ðŸš€ Premium Salesforce org manager with glassmorphism UI, real-time search, smart filters, favorites system, analytics dashboard, and advanced CLI integration. Modern productivity tool for Salesforce developers.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "clipboardWrite",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.force.com/*",
    "https://*.lightning.force.com/*",
    "https://*.my.salesforce.com/*",
    "https://*.sandbox.my.salesforce.com/*",
    "http://localhost:3000/*"
  ],
  "default_locale": "pt_BR",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:3000 https://*.salesforce.com https://*.force.com"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "keywords": [
    "salesforce",
    "org",
    "switcher",
    "cli",
    "developer",
    "admin",
    "arc",
    "productivity",
    "glassmorphism",
    "analytics",
    "search",
    "favorites",
    "modern",
    "premium"
  ]
}
