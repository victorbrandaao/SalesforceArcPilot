{
  "manifest_version": 3,
  "name": "Salesforce ArcPilot - Org Manager",
  "version": "1.0.0",
  "description": "ðŸš€ Modern Salesforce org switcher inspired by Arc Browser. One-click access to CLI orgs with elegant UI. Save 80% time switching between dev, staging & production environments.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.force.com/*",
    "https://*.lightning.force.com/*"
  ],
  "default_locale": "pt_BR",
  "keywords": [
    "salesforce",
    "org",
    "switcher",
    "cli",
    "developer",
    "admin",
    "arc",
    "productivity"
  ]
}
